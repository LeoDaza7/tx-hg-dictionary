<%= simple_form_for(@word) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :name, 
        label: "Search Word",
        input_html: { class: "textfield" },
        required: true,
        wrapper: false,
        label_html: { class: "label" },
        placeholder: "Enter Word"%>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info is-small", value: "Search" %>
<% end %>
